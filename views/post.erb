<h1>Детали поста:</h1>
<br/>

<% @result.each do |post| %>
	    <p>
	      <%= @row['content'] %>
	      <br/>
	      <br/>
	      <h6>Время добавления: <%= @row['created_date'] %></h6>
	    </p>
	  <hr/> <!-- раздляет чертой --> 
<% end %>

<h4>Комментарии:</h4>
<br/>
<% @comment.each do |comm| %>
	    <p>
	      <%= comm['comment'] %>
	      <br/>
	      <h6>Время добавления: <%= comm['created_date']%></h6>
	    </p>
	  <hr/> <!-- раздляет чертой --> 
<% end %>

<form action="/post/<%= @row['id'] %>" method="POST">

  <div class="mb-3">
  	<h4>Написать комментарий</h4>
  </div>

  <div class="mb-3">
	  <textarea name="content" class="form-control" placeholder="Расскажи что думаешь!" id="floatingTextarea2" style="height: 100px"></textarea>
  </div>

  <br/>
  	<button type="submit" class="btn btn-primary">Добавить комментарий</button>

</form>